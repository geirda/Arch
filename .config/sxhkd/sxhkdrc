# FN-buttons
XF86HomePage
 browser.sh https://en.wikipedia.org

XF86Mail
 browser.sh https://gmail.google.com

XF86Search
 SOK=$(rofi -dmenu -width 30 -l 0 -p "   DuckDuckGo"); [ -z $SOK ] || browser.sh "https://duckduckgo.com/?t=ffnt&q=$SOK"

